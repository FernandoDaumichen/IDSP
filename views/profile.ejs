<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="../styles/style_profile.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" />

  <title>My Profile</title>
  <script>
function toggleLike(event) {
  const likeButton = event.target.closest('.like-button');
  const heartIcon = likeButton.querySelector('i');
  heartIcon.classList.toggle('far');
  heartIcon.classList.toggle('fas');
}
function updateScrollHeight() {
      const postsContainer = document.querySelector(".posts-container");
      postsContainer.scrollTop = postsContainer.scrollHeight;
    }
    </script>
</head>
<body>
  <div class="flex-container">
  <div class="wrapper">
    <div class="background-container">
      <form action="/profile/settings" class="settings-form" method="GET">
        <button>
      <div class="setting">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="45px" height="40px">
          <rect x="4" y="6.5" width="16" height="1" fill="#000000" />
          <circle cx="12" cy="7.25" r="3" fill="white" />
          <circle cx="12" cy="7.25" r="3" stroke="#000000" fill="none" />
          <rect x="12" y="15.5" width="16" height="1" fill="#000000" />
          <circle cx="19" cy="16.25" r="3" fill="#000000" />
        </svg>
      </div>
    </button>
    </form>
      <div class="profile-photo"></div>
      <p class="username">@<%= user.username %>
      </p>
      <p class="netBucket">
        <%=totalBucketTitle.length%> goals
      </p>
      <button class="add-friends-button">
        <i class="fas fa-user-plus"></i>
      </button>
      <form action="/profile/edit" class="edit-form">
        <button type="submit" class="edit-button">Edit Profile</button>
      </form>
      <div class="buttons">
        <button style="width: 100px;">All</button>
        <button style="width: 100px;">Media</button>
        <button style="width: 100px;">Posts</button>
      </div>
    </div>
    <form class="user-info" action="/profile/" method="POST">
      <div class="posts-container">
        <div class="user-input-wrapper">
          <div class="wrapwrap" style="display: flex; align-items: flex-start">
            <img src="https://media.pitchfork.com/photos/5a00b098ec4b2c2177a85205/1:1/w_800,h_800,c_limit/samsmith_thrill.jpg" class="user-avatar">
            <div>
              <select name="bucket">
                <option value="">Please choose your bucket</option>
                <% totalBucketTitle.forEach(element=> { %>
                  <option value="<%=element.title%>">
                    <%=element.title%>
                  </option>
                  <% }) %>
              </select>
            </div>
          </div>
          <div class="createInput">
            <textarea style="outline: none; resize: none" type="text" name="newMessage"
              placeholder="What's on your mind?" class="create_post"></textarea>
            <button type="submit" class="add-button">
              <img src="../styles/images/send_icon_noBackground.png" alt="Add" width="24" height="24">
            </button>
          </div>
        </div>
    </form>



    <% data.forEach(post=> { %>
      <div class="post">
       <img src=<%=user.profileImg%> style="z-index: 0; margin-top: 15px;" class="user-picture user-avatar">
        <div class="post-content" style="padding: 10px;">
          <p class="username-inside">
            <%=user.username%>
          </p>
          <p class="bucket-info">
            <%= post.bucket.title %> <span class="<%= post.bucket.completed ? 'Completed': 'InProgress' %>"><%= post.bucket.completed ? 'Completed': 'In Progress' %></span>
          </p>
          <p class="post-message">
            <%= post.content %>
          </p>
          <div class="post-actions">
            <button type="button" class="like-button" onclick="toggleLike(event)">
              <i class="far fa-heart"></i>
            </button>  
            <button class="comment-button">
              <i class="far fa-comment-alt"></i>
            </button>
          </div>
        </div>
      </div>
      <% }) %>



      <br>
      <br>
  </div>
  <div class="navbar">
    <a href="/feeds/home">
      <img src="../styles/images/home_icon_noBackground.png" alt="Home" width="40" height="40" />
    </a>
    <a href="/search">
      <img src="../styles/images/search_icon_noBackground.png" alt="Search" width="40" height="40" />
    </a>
    <div class="circle">
      <a href="/feeds/buckets?show=inprogress">
        <img src="../styles/images/bucket_icon_noBackground.png" alt="Bucket" width="50" height="50" />
      </a>
    </div>
    <a href="/notes">
      <img src="../styles/images/note_icon_noBackground.png" alt="Notes" width="40" height="40" />
    </a>
    <a href="/profile">
      <img src="../styles/images/profile_icon_noBackground.png" alt="Profile" width="40" height="40" />
    </a>
  </div>
  </div>
</div>
</body>

</html>