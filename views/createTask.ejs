<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Creating Task</title>
  </head>

  <body>
    <h1>Create Task Page</h1>
    <form method="POST" action="/feeds/createTask">
      <button>Add</button>
        <ul id="myUL" style="list-style-type: none;" ></ul>
    </form>

        <div class="task-container">
          <p>Set Your Tasks</p>
  
          <input type="text" id="myInput" placeholder="Your milestones!">
          <button type="button" class="addBtn">Add</button>
        </div>

  <script>

    function goBack() {
      window.history.back();
    }

    const form = document.querySelector("form");
    const addBtn = document.querySelector(".addBtn");

    addBtn.addEventListener("click", (e) => {
        const li = document.createElement("li");
        const inputValue = document.getElementById("myInput").value;const text = document.createTextNode(inputValue);
        const inpTest = `<input type='hidden' value='${inputValue}' name='task[]'>`;
        form.innerHTML+= inpTest;
        li.appendChild(text);
        document.getElementById("myUL").appendChild(li);
        document.getElementById("myInput").value = "";
})

  </script>
  </body>
</html>
