// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  following User[]   @relation(fields: [userId], references: [id])
  buckets   Bucket[]
}

enum Tag {
  TRAVEL
  ADVENTURE
  STUDY
  FOOD
  FUN
  NATURE
  CULTURE
  EXERCISE
  OTHERS
}

model Bucket {
  id        Int       @id @default(autoincrement())
  startDate DateTime  @default(now())
  dueDate   DateTime
  title     String
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  messages  Message[]
  tag       Tag       @default(OTHERS)
  tasks     Task[]
}

model Task {
  id       Int    @id @default(autoincrement())
  message  String
  bucket   Bucket @relation(fields: [bucketId], references: [id])
  bucketId Int
}

model Message {
  id       Int    @id @default(autoincrement())
  content  String
  bucket   Bucket @relation(fields: [bucketId], references: [id])
  bucketId Int
}
